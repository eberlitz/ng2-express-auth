{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": {
            "when": "$(basename)"
        },
        "**/*.css": {
            "when": "$(basename).less"
        }
    },
    "typescript.tsdk": "./node_modules/typescript/lib"
}
